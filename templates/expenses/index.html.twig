{% extends 'base.html.twig' %}

{% block title %}Expenses index{% endblock %}

{% block body %}
    <h1>Expenses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Provider</th>
                <th>Amount</th>
                <th>Tps</th>
                <th>Tvq</th>
                <th>Tvh</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for expense in expenses %}
            <tr>
                <td>{{ expense.id }}</td>
                <td>{{ expense.date ? expense.date|date('Y-m-d') : '' }}</td>
                <td>{{ expense.Provider }}</td>
                <td>{{ expense.amount }}</td>
                <td>{{ expense.tps }}</td>
                <td>{{ expense.tvq }}</td>
                <td>{{ expense.tvh }}</td>
                <td>
                    <a href="{{ path('expenses_show', {'id': expense.id}) }}">show</a>
                    <a href="{{ path('expenses_edit', {'id': expense.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('expenses_new') }}">Create new</a>
{% endblock %}
